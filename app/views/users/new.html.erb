<div id="input_container">
	<%= render 'form' %>
</div>

<script>

$( window ).resize(function() {
  	$("#input_container").css("top", $( window ).width()    * 0.315);
  	$("#input_container").css("left", $( window ).width()   * 0.242);
  	$("#input_container").css("width", $( window ).width()  * 0.345);
  	$("#input_container").css("height", $( window ).height() * 0.05);
  	$("#input_container .form-control input").css("height", $( window ).height() * 0.065);
});

</script>

